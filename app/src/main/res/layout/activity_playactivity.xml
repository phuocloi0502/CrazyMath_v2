<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F5363"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="SCORE: 0"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            android:id="@+id/txvscoreplay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="BEST: 0"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            android:id="@+id/txvbestscoreplay"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Time"
            android:textColor="#F60303"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/txvtime"/>

        <TextView
            android:id="@+id/txvpheptinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="PHÉP TÍNH"
            android:textColor="#FFFFFF"
            android:textSize="65sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/txvdapan"
            android:layout_marginBottom="10dp"
            android:text="99"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btntl1"
            android:onClick="OnClick1"
            tools:ignore="OnClick" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/txvdapan_1"
            android:layout_marginBottom="10dp"
            android:text="101"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btntl2"
            android:onClick="OnClick2"
            tools:ignore="OnClick"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/txvdapan_2"
            android:layout_marginBottom="10dp"
            android:text="100"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btntl3"
            android:onClick="OnClick3"
            tools:ignore="OnClick"/>

    </LinearLayout>

</LinearLayout>